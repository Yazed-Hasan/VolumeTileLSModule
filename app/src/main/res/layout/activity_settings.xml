<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume Tile Module Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <Switch
        android:id="@+id/switch_slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Status Bar Slide"
        android:textSize="18sp"
        android:checked="true"
        android:layout_marginBottom="16dp"/>

    <Switch
        android:id="@+id/switch_long_press"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Long Press to Mute"
        android:textSize="18sp"
        android:checked="true"
        android:layout_marginBottom="16dp"/>

    <Switch
        android:id="@+id/switch_single_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Single Tap to Show Panel"
        android:textSize="18sp"
        android:checked="false"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long Press Delay (ms)"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/seekbar_long_press_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2000"
        android:progress="500"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/text_long_press_delay_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500ms"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slide Sensitivity"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <SeekBar
        android:id="@+id/seekbar_sensitivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="20"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/text_sensitivity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20dp"
        android:layout_gravity="end"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lower value = More sensitive\nHigher value = Less sensitive"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save &amp; Apply"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: You may need to restart SystemUI or Reboot for changes to take effect."
        android:textSize="12sp"
        android:textColor="#FF0000"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>
